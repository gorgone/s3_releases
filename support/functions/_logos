#!/bin/bash

ologo(){
	echo -en "$w_h";
	printf "  %-s\n" "  ___  ____   ___" " / _ \\/ ___| / __|__ _ _ __ ___" "| | | \\___ \\| |  / _\` | '_ \` _ \ " "| |_| |___) | |_| (_| | | | | | |" " \\___/|____/ \\___\\__,_|_| |_| |_|" " ";
};
slogo(){
	echo -en "$w_h";
	printf "  %-s\n" "     _                            _                         _ " " ___| |_ _ __ ___  __ _ _ __ ___ | |__   ___   __ _ _ __ __| |" "/ __| __| '__/ _ \/ _\` | '_ \` _ \| '_ \ / _ \ / _\` | '__/ _\` |" "\__ \ |_| | |  __/ (_| | | | | | | |_) | (_) | (_| | | | (_| |" "|___/\__|_|  \___|\__,_|_| |_| |_|_.__/ \___/ \__,_|_|  \__,_|" "                                                              ";
};
bye(){
	clear;
	s3logo;
	exit;
};
s3logo(){
echo -e $C"
    _________________
   /   _____/\\_____  \\   ===========================
   \_____  \\   _(__  <   $(printf '%-6s %29s' "$w_l"'Version' "$g_l$(version | head -n1 | awk '{print $1}')")$C
   /        \\ /       \\  ===========================
  /_______  //______  / $p_l by$y_l Gorgone$p_l 2021$C,$y_l WXbet$p_l 2023$C
          \\/        \/   ===========================$C
  $(printf "$SOURCE ${txt_repo::4}:" | xargs) $w_l$(basename ${repodir}) $($(REPOURLDIRTY) && printf "$r_l($txt_wc_deviation)")\n$W";
};
